{% macro noteBlock(content, url, date) %}
<article class="note">
    <div class="note__reply">
      <a href="mailto:brian@brianjdevries.com?subject=Nice%20note!&body={{ site.url }}{{ url }}%0D%0A%0D%0A">reply
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-corner-up-right"><polyline points="15 14 20 9 15 4"></polyline><path d="M4 20v-7a4 4 0 0 1 4-4h12"></path></svg>
      </a>
    </div>
    <div class="note__content">
      {{ content | safe }}
    </div>
    <footer>
      <a href="{{ url }}">
        <time class="note__time" datetime="{{ date | dateformat("YYYY-MM-DDTHH:mm:ss.SSSZ") }}">
          {{ date | dateformat("HH:mm ddd MMM DD YYYY Z") }}
        </time>
      </a>
    </footer>
  </article>
{% endmacro %}